<html>
<h1>Update {{player.first_name}} {{player.last_name}}:</h1>
<form id="update-player" action="/player" method="post">
    First name: <input type="text" name="fname" value="{{player.first_name}}"><br>
    Last name: <input type="text" name="lname" value="{{player.last_name}}"><br>
    Team: <select name="team" id="team-selector"> 
        {{#each team}}
        <option value="{{team_id}}">{{team_name}}</option>
        {{/each}}
    </select><br>
    Home Country:<select name="country" id="country-selector">
    	{{#each country}}
    	<option value="{{country_id}}">{{country_name}}</option>
    	{{/each}}
    </select>
    <br>
     Position:
    <select name="position" id="position-selector">
        {{#each position}}
            <option value="{{position_id}}">{{side_position_name}}</option>
        {{/each}}
    </select>
</form>
<button onclick="updatePlayer({{player.player_id}})">Update</button>
<script defer>selectTeam({{player.team}});</script>
<script defer>selectPosition({{player.position}});</script>
<script defer>selectCountry({{player.home_country}});</script>
</html>

